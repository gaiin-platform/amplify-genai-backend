# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# Environment Configuration
environment     = "dev"
aws_region      = "us-east-1"
deployment_name = "your-deployment-name" # From var.yml DEP_NAME

# Network Configuration
vpc_id             = "vpc-xxxxx"
private_subnet_ids = ["subnet-xxxxx", "subnet-yyyyy"]
public_subnet_ids  = ["subnet-aaaaa", "subnet-bbbbb"]

# Container Configuration
container_image = "" # Leave empty to use latest from ECR
desired_count   = 2
min_capacity    = 2
max_capacity    = 10
task_cpu        = "1024"  # 1 vCPU
task_memory     = "2048"  # 2GB

# Application Configuration
allowed_origins = "*" # In production, set to your actual domains
cognito_user_pool_id = "us-east-1_xxxxx"
cognito_client_id    = "xxxxxxxxxxxxx"
idp_prefix          = "" # Optional

# SSL/TLS (optional)
# alb_certificate_arn = "arn:aws:acm:us-east-1:xxxxx:certificate/xxxxx"

# Monitoring
enable_container_insights = true
log_retention_days       = 30

# Tags
tags = {
  Project     = "Amplify"
  Team        = "Engineering"
  CostCenter  = "12345"
}
